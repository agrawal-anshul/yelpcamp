<% include ../partials/header %>
    <div class="container">
        <div class="row">
            <h1>Submit your Advertisements to us</h1>
            <hr />
            <div>
                <form action="/ads" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Ad Title</label>
                        <input
    
                            type="text"
                            class="form-control"
                            id="name"
                            placeholder="Title"
                            value=""
                            name="name"
                            required
                        />
                    </div>
                    <div class="form-group">
                        <label for="desc">Ad Description</label>
                        <textarea
                        class="form-control"
                            id="desc"
                            name="desc"
                            value=""
                            rows="2"
                            placeholder="Description"
                            required
                        >
                        </textarea>
                    </div>
                    <div class="form-group">
                        <label for="image">Upload Ad</label>
                        <input type="file" class="form-control-file" id="image" name="image" required />
                    </div>
                    <div>
                        <button class="btn btn-success" type="submit">Submit</button>
                    </div>
                </form>
            </div>
    
            <hr />
        </div>
    </div>
    </body>
</html>

