<% include ../partials/header %>

<div class="container-fluid">
<div class="row">
    <div class="col-2">
    <div id="sidebar1">
        <%- include('../ads/test.ejs',{id:"sidebar1"}); %> 
    </div>

            
    </div>
    <div class="col-8">
        <div class="jumbotron">
            <div class="container-fluid">
    
                <h1>Welcome to YelpCamp!</h1>
                <p>View our hand-picked campgrounds from all over the world</p>
                <p>
                    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
                </p>
    
            </div>
        </div>
        <div class="row text-center" style="display:flex; flex-wrap: wrap;">
            <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img class="img-thumbnail" src="<%= campground.image %>">
                    <div class="caption">
                        <h4><%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a></a>
                    </p>
                </div>
            </div>
            <% }); %>
        </div>
    </div>

    <div class="col-2">
        <%- include('../ads/test.ejs',{id:"sidebar2"}); %> 
        
    </div>       

</div>
</div>
<% include ../partials/footer %>